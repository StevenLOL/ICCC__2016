<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_session_item">

    <ImageView
        android:id="@+id/icon_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:src="@drawable/blue_pre_text" />


    <ImageView
        android:id="@+id/program_image_extend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="3dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:layout_toLeftOf="@id/program_image_extend"
        android:layout_toRightOf="@id/icon_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/item_session_catagory_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/item_session_catagory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/item_session_catagory_layout"
            android:id="@+id/item_session_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>