            <TextView
                android:id="@+id/title2_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:id="@+id/title3_layout"
